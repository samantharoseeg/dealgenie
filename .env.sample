# DealGenie v1.2 Configuration
# Copy this file to .env and customize values for your deployment

# =====================================
# SYSTEM IDENTIFICATION
# =====================================
DEALGENIE_VERSION=1.2
APPLICATION_NAME=DealGenie Multi-Template System

# =====================================
# FLASK APPLICATION SETTINGS
# =====================================
FLASK_APP=api/multi_template_api.py
FLASK_ENV=production
FLASK_DEBUG=false
SECRET_KEY=your-secret-key-change-in-production

# =====================================
# API CONFIGURATION
# =====================================
API_HOST=0.0.0.0
API_PORT=5000
API_TIMEOUT=30
API_WORKERS=4

# CORS Settings
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_ALLOW_CREDENTIALS=true

# =====================================
# MULTI-TEMPLATE ENGINE SETTINGS
# =====================================
ZONING_CONSTRAINTS_ENABLED=true
MULTI_TEMPLATE_ENABLED=true
GEOGRAPHIC_CALIBRATION_ENABLED=true
BUSINESS_LOGIC_FIXES_ENABLED=true

# =====================================
# CONFIDENCE AND SCORING THRESHOLDS
# =====================================
# Primary recommendation confidence thresholds
CONF_PRIMARY_MIN=1.5      # Minimum gap for primary recommendation
CONF_SECONDARY_MIN=1.0    # Minimum gap for secondary recommendation  
CONF_TERNARY_MIN=0.5      # Minimum gap for tertiary recommendation

# Template viability thresholds
TEMPLATE_VIABLE_MIN=2.0   # Minimum score for template viability
TEMPLATE_STRONG_MIN=6.0   # Minimum score for strong recommendation

# Multi-template trigger settings
CLOSE_SCORES_DELTA=1.0    # Score difference threshold for multi-template
HIGH_COMPATIBILITY_THRESHOLD=0.6  # Compatibility threshold for multi-template
STATISTICAL_TIE_THRESHOLD=0.3     # Statistical tie detection threshold

# =====================================
# PERFORMANCE AND OPTIMIZATION
# =====================================
BATCH_SIZE_LIMIT=100      # Maximum properties per batch request
CACHE_TTL=3600           # Configuration cache time-to-live (seconds)
REQUEST_TIMEOUT=30       # API request timeout (seconds)
MAX_WORKERS=4            # Maximum concurrent workers

# Memory management
MEMORY_LIMIT_MB=1024     # Memory limit per worker process
GC_THRESHOLD=100         # Garbage collection threshold

# =====================================
# DATA QUALITY AND TRANSPARENCY
# =====================================
DATA_VINTAGE_TRACKING=true        # Track data source timestamps
COVERAGE_SCORING_ENABLED=true     # Calculate data coverage scores
QUALITY_WARNINGS_ENABLED=true     # Show data quality warnings
LIMITATION_TRANSPARENCY=true       # Include accuracy limitations in responses

# Data freshness thresholds (days)
DATA_FRESH_THRESHOLD=90           # Data considered fresh
DATA_STALE_THRESHOLD=365          # Data considered stale

# =====================================
# LOGGING AND MONITORING
# =====================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/dealgenie.log
LOG_MAX_BYTES=10485760   # 10MB
LOG_BACKUP_COUNT=5

# Performance monitoring
PERFORMANCE_TRACKING=true
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# =====================================
# DATABASE CONFIGURATION (Future Use)
# =====================================
DATABASE_URL=sqlite:///dealgenie.db
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30

# =====================================
# PREMIUM DATA INTEGRATION (Future Use)
# =====================================
# CoStar API Integration
COSTAR_API_KEY=
COSTAR_API_URL=https://api.costar.com/v1
COSTAR_RATE_LIMIT=100    # Requests per minute

# CompStak API Integration  
COMPSTAT_API_KEY=
COMPSTAT_API_URL=https://api.compstack.com/v1
COMPSTAT_RATE_LIMIT=50   # Requests per minute

# Additional Premium Sources
REINETWORK_API_KEY=
XCELIGENT_API_KEY=
REALCAPITALANALYTICS_API_KEY=

# =====================================
# GEOGRAPHIC DATA SOURCES
# =====================================
# LA County Assessor Data
ASSESSOR_DATA_URL=https://portal.assessor.lacounty.gov/api
ASSESSOR_UPDATE_FREQUENCY=daily

# LA City Planning Data  
PLANNING_API_URL=https://planning.lacity.org/api
ZONING_UPDATE_FREQUENCY=weekly

# Transit Data (Metro)
METRO_API_KEY=
METRO_API_URL=https://api.metro.net
GTFS_UPDATE_FREQUENCY=weekly

# =====================================
# SECURITY SETTINGS
# =====================================
# API Security
API_RATE_LIMIT=1000/hour         # Rate limit per IP
API_RATE_LIMIT_BURST=100         # Burst allowance
REQUIRE_API_KEY=false            # Set to true for production

# HTTPS Settings (Production)
FORCE_HTTPS=false                # Force HTTPS redirects
SSL_CERT_PATH=                   # Path to SSL certificate
SSL_KEY_PATH=                    # Path to SSL private key

# Authentication (Future Implementation)
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600    # 1 hour
JWT_REFRESH_TOKEN_EXPIRES=86400  # 24 hours

# =====================================
# DEVELOPMENT SETTINGS
# =====================================
# Development mode flags
DEV_MODE=false
MOCK_DATA_ENABLED=false
DEBUG_LOGGING=false
PROFILING_ENABLED=false

# Testing configuration
TEST_DATABASE_URL=sqlite:///test_dealgenie.db
TEST_BATCH_SIZE=10
ENABLE_TEST_ROUTES=false

# =====================================
# NOTIFICATION SETTINGS (Future Use)
# =====================================
# Email notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# Alert thresholds
ERROR_RATE_THRESHOLD=5.0         # Error rate percentage for alerts
RESPONSE_TIME_THRESHOLD=1000     # Response time (ms) for alerts
ACCURACY_DROP_THRESHOLD=5.0      # Accuracy drop percentage for alerts

# =====================================
# BACKUP AND RECOVERY
# =====================================
BACKUP_ENABLED=false
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=./backups

# =====================================
# ANALYTICS AND REPORTING
# =====================================
ANALYTICS_ENABLED=true
USAGE_TRACKING=true
PERFORMANCE_METRICS=true
ERROR_REPORTING=true

# External analytics services
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=
SEGMENT_WRITE_KEY=

# =====================================
# FEATURE FLAGS
# =====================================
# Experimental features
FEATURE_ML_ENHANCEMENT=false     # Machine learning enhancements
FEATURE_COMPUTER_VISION=false    # Property image analysis
FEATURE_SENTIMENT_ANALYSIS=false # Market sentiment integration
FEATURE_PREDICTIVE_ANALYTICS=false # Trend forecasting

# UI Features
FEATURE_INTERACTIVE_MAPS=true    # Interactive property maps
FEATURE_COMPARISON_TOOLS=true    # Property comparison interface
FEATURE_EXPORT_CAPABILITIES=true # Data export functionality

# =====================================
# DEPLOYMENT ENVIRONMENT
# =====================================
ENVIRONMENT=development          # development, staging, production
DEPLOYMENT_DATE=2024-08-28
VERSION_HASH=                    # Git commit hash
HEALTH_CHECK_URL=/health
METRICS_ENDPOINT=/metrics
STATUS_PAGE_URL=/status

# Container settings (Docker/Kubernetes)
CONTAINER_NAME=dealgenie-v12
CONTAINER_PORT=5000
REPLICAS=1

# Load balancing
LOAD_BALANCER_ENABLED=false
STICKY_SESSIONS=false
SESSION_TIMEOUT=1800

# =====================================
# COMPLIANCE AND GOVERNANCE
# =====================================
# Data retention policies
DATA_RETENTION_DAYS=365
LOG_RETENTION_DAYS=90
ANALYTICS_RETENTION_DAYS=730

# Privacy settings
ANONYMIZE_LOGS=true
PII_DETECTION=true
GDPR_COMPLIANCE=true

# Audit logging
AUDIT_LOGGING=true
AUDIT_LOG_FILE=logs/audit.log