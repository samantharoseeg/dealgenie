# DealGenie Configuration Template
# Copy this file to .env and configure for your environment

# =============================================================================
# CENSUS API CONFIGURATION
# =============================================================================
# Get your free API key at: https://api.census.gov/data/key_signup.html
# Public data access - no authentication required for basic usage
CENSUS_API_KEY=your_census_api_key_here_optional

# Census API base URL (should not change)
CENSUS_API_BASE_URL=https://api.census.gov/data/2022/acs/acs5

# Census API rate limit (requests per second)
CENSUS_API_RATE_LIMIT=500

# =============================================================================
# DATA PATHS CONFIGURATION  
# =============================================================================
# Path to the main LA County parcel CSV file
# Download from: http://zimas.lacity.org (581MB file)
PARCEL_CSV_PATH=scraper/la_parcels_complete_merged.csv

# SQLite database path for caching and results
DATABASE_PATH=data/dealgenie.db

# Output directory for generated reports
OUTPUT_DIR=out

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================  
# Feature extraction batch size for memory management
BATCH_SIZE=1000

# API request timeout (seconds)
API_TIMEOUT=30

# Maximum retries for failed API requests
API_MAX_RETRIES=3

# Cache TTL for Census API responses (seconds)
CACHE_TTL=86400

# =============================================================================
# ANALYSIS CONFIGURATION
# =============================================================================
# Default development template for scoring
DEFAULT_TEMPLATE=multifamily

# Confidence threshold for data quality (0.0-1.0)
CONFIDENCE_THRESHOLD=0.8

# Random seed for deterministic sampling
RANDOM_SEED=42

# Number of bootstrap sample reports to generate
BOOTSTRAP_SAMPLE_SIZE=15

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (optional, logs to console if not set)
LOG_FILE=

# Enable performance monitoring
ENABLE_PERFORMANCE_LOGGING=true

# =============================================================================  
# OPTIONAL: EXTERNAL INTEGRATIONS
# =============================================================================
# Google Maps API key (for enhanced geocoding - optional)
# GOOGLE_MAPS_API_KEY=your_google_maps_key_here

# Mapbox API key (for enhanced mapping - optional) 
# MAPBOX_API_KEY=your_mapbox_key_here

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Enable data validation checks
ENABLE_DATA_VALIDATION=true

# Enable input sanitization for HTML reports
ENABLE_INPUT_SANITIZATION=true

# Maximum file size for uploads (bytes) 
MAX_FILE_SIZE=1073741824

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug mode (more verbose logging, development features)
DEBUG_MODE=false

# Enable performance regression testing
ENABLE_REGRESSION_TESTS=true

# Profile memory usage during processing
ENABLE_MEMORY_PROFILING=false

# =============================================================================
# NOTES
# =============================================================================
# - All paths should be relative to project root or absolute
# - Census API key is optional but recommended for higher rate limits  
# - Default values are production-ready and don't require changes
# - Copy this file to .env and modify values for your environment
# - Never commit .env file to version control (included in .gitignore)
#
# For more information:
# - Census API: https://www.census.gov/data/developers/guidance/api-user-guide.html
# - Project documentation: README.md
# - Feature documentation: docs/feature_dictionary.md